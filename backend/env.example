# ------------------------------------------------------------------
# Database Configuration
# You can use the full DATABASE_URL or the individual parts.
# ------------------------------------------------------------------
DATABASE_URL=postgresql://user:password@host:port/dbname

# OR (if not using DATABASE_URL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nFac_server
DB_USER=postgres
DB_PASSWORD="your_db_password"

# ------------------------------------------------------------------
# JWT / Authentication
# ------------------------------------------------------------------
SECRET_KEY="your-super-secret-key-that-is-long-and-random"
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480

# ------------------------------------------------------------------
# FastAPI Server
# ------------------------------------------------------------------
DEBUG=True
HOST=0.0.0.0
PORT=8000

# ------------------------------------------------------------------
# CORS Settings
# Comma-separated list of allowed origins
# ------------------------------------------------------------------
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:5173,https://your-frontend-domain.com"

# ------------------------------------------------------------------
# OpenAI API KEYS (LEGACY - can be left empty if using Azure)
# ------------------------------------------------------------------
OPENAI_API_KEY="your_openai_api_key"
OPENAI_MODEL_NAME="gpt-4-turbo"

# ------------------------------------------------------------------
# Google API Keys for Charity Research
# ------------------------------------------------------------------
GOOGLE_API_KEY="your_google_api_key_for_custom_search"
GOOGLE_SEARCH_ENGINE_ID="your_google_custom_search_engine_id"

# ------------------------------------------------------------------
# Google Gemini AI API Keys (for rotation)
# ------------------------------------------------------------------
GEMINI_API_KEY="your_gemini_api_key_1"
GEMINI_API_KEY_2="your_gemini_api_key_2"
GEMINI_API_KEY_3="your_gemini_api_key_3"

